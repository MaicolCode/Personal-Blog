<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Personal Blog</title>
    <%- include('./partials/design') %>
  </head>
  <body>
    <h1>Personal Blog</h1>
    <ul>
      <% posts.forEach(post => { %>
      <li>
        <h2><%= post.title %></h2>
        <p><%= post.content %></p>
        <p><%= post.date %></p>
        <a href="/post/<%= post.id %>">Read more</a>
      </li>
      <% }) %>
    </ul>
  </body>
</html>
