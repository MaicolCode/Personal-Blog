<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" href="/images/iconPandaBlogMini.png" />
    <title>Dev Journey</title>
    <%- include('./partials/design') %>
  </head>
  <body class="general">
    <main>
      <header><%- include('./partials/nav') %></header>

      <section class="posts">
        <div class="public-posts">
          <h1>Published posts.</h1>
          <ul>
            <% posts.forEach(post => { %>
            <li class="post">
              <img src="<%= post.image %>" alt="post image" />
              <div class="post-title">
                <h2><%= post.title %></h2>
                <span><%= post.tag %></span>
              </div>
              <p><%= post.date %></p>
              <a href="/post/<%= post.id %>" class="read-more">Read more</a>
            </li>
            <% }) %>
          </ul>
        </div>
        <div class="recent-posts">
          <p>
            <strong> Hello user, welcome to my blog! </strong> In this blog you
            will find technological topics, news and much more.
          </p>
          <h2>Recent Post published</h2>
          <div class="content-recent-posts">
            <% if (recentPosts.length > 0) { %> <% recentPosts.forEach(post => {
            %>
            <div class="recent-post">
              <img src="<%= post.image %>" alt="post image" />
              <div class="post-title">
                <h2><%= post.title %></h2>
                <span><%= post.tag %></span>
              </div>
              <p><%= post.date %></p>

              <a href="/post/<%= post.id %>" class="read-more">Read more</a>
            </div>
            <% }) } else {%>
            <p>No posts found...</p>
            <% } %>
          </div>
        </div>
      </section>
      <%- include('./partials/footer') %>
    </main>
  </body>
</html>
