<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Panel</title>
    <%- include('../partials/design') %>
  </head>
  <body>
    <main>
      <h1>Admin Panel</h1>
      <a href="/admin/post/new">Create new post</a>
      <table>
        <thead>
          <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Content</th>
            <th>Date</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% posts.forEach(post => { %>
          <tr>
            <td><%= post.id %></td>
            <td><%= post.title %></td>
            <td><%= post.content %></td>
            <td><%= post.date %></td>
            <td>
              <a href="/admin/post/<%= post.id %>">Edit</a>
              <a class="deleteButton" id="<%= post.id %>" href="/admin"
                >Delete</a
              >
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </main>
  </body>
  <script>
    const deleteButtons = document.querySelectorAll('.deleteButton')
    const reloadButton = document.querySelector('.recargar')
    deleteButtons.forEach((button) => {
      button.addEventListener('click', (e) => {
        const id = e.target.id
        fetch(`http://localhost:3000/admin/delete/${id}`, {
          method: 'DELETE'
        })
          .then((res) => res.json())
          .then((data) => {
            console.log(data)
          })
      })
    })
  </script>
</html>
