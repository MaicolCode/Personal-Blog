<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" href="/images/iconPandaBlogMini.png" />
    <title>Edit Post - Personal Blog</title>
    <%- include('../../partials/design') %>
  </head>
  <body class="general">
    <!-- Script element sourcing TinyMCE -->
    <script
      src="/path/or/uri/to/tinymce.min.js"
      referrerpolicy="origin"
    ></script>
    <!-- Script element sourcing the TinyMCE configuration -->
    <script
      type="application/javascript"
      src="/javascripts/my-tinymce-config.js"
    ></script>
    <main>
      <header><%- include('../../partials/nav')%></header>
      <section class="admin-section-edit">
        <h1>Edit Post</h1>
        <div class="content-edit">
          <form
            action="/admin/post/edit/<%= post.id %>"
            method="POST"
            class="content-form"
          >
            <label for="title">Title</label>
            <input
              type="text"
              name="title"
              id="title"
              value="<%= post.title %>"
            />
            <label for="content">Content</label>
            <textarea
              name="content"
              id="my-expressjs-tinymce-app"
              cols="30"
              rows="10"
            >
<%= post.content %></textarea
            >
            <label for="date">Date</label>
            <input type="date" name="date" id="date" value="<%= post.date %>" />
            <button type="button" class="btn-edit">Edit</button>
            <%- include('../../modals/edit') %>
          </form>
        </div>
      </section>
      <%- include('../../partials/footer')%>
    </main>
    <script>
      const btnEdit = document.querySelector('.btn-edit')
      const modalEdit = document.querySelector('.modal-content')

      btnEdit.addEventListener('click', (e) => {
        e.preventDefault()
        modalEdit.style.display = 'flex'
      })
    </script>
  </body>
</html>
